/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform translateX(-120%)
  padding 0 !important
  transition 0.5s
  max-height 0
  &.order-enter-active
    padding 2rem 0 !important
    transform translateX(0)
    max-height 60px

.order-exit
  transition 0.5s
  max-height 60px
  &.order-exit-active
    max-height 0
    padding 0
    transform translateX(120%)

.count-enter
  transform translateY(100%)
  transition: 500ms
  &.count-enter-active
    transform translateY(0)
.count-exit
  transition: 500ms
  position: absolute
  left: 0
  bottom: 0
  &.count-exit-active
    transform translateY(-100%)